    "version": "0.2.0",
    "configurations": [
    
        {
            "name": "pool_runner",
            "type": "cppdbg",
            "request": "launch",
            "program": "/build/faasm/bin/pool_runner",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "text": "set pagination off",
                    "ignoreFailures": true
                },
                {
                    "text": "set non-stop on",
                    "ignoreFailures": true
                }
            ],
        },
        {
            "name": "faabric_tests",
            "type": "cppdbg",
            "request": "launch",
            "program": "/build/faabric/static/bin/faabric_tests",
            "args": ["[functionstate]"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "text": "set pagination off",
                    "ignoreFailures": true
                },
                {
                    "text": "set non-stop on",
                    "ignoreFailures": true
                }
            ],
        }
    ]
}